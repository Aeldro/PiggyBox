@model WildPay.Models.Entities.Category

@{
    ViewData["Title"] = "Ajouter une catégorie";

    ViewData["ReturnPageAction"] = "ListGroupCategories";
    ViewData["ReturnPageController"] = "Category";
    ViewData["ReturnId"] = Model.GroupId;
}

<div>
    <partial name="_GroupTitlePartial" model="ViewBag.Group" />
    <hr />
    <div class="row">
        <partial name="_GroupNavBarPartial" model="ViewBag.Group" />
        <div class="col-md-9">
            <section>
                <h3>Nouvelle catégorie</h3>
                <hr />
                <form method="post">
                    <input class="form-control" type="text" asp-for="GroupId" readonly hidden />

                    <div class="form-floating mb-3">
                        <input class="form-control" type="text" asp-for="@Model.Name" placeholder="Nom de la catégorie" required />
                        <label class="control-label" asp-for="@Model.Name">Nom de la catégorie</label>
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>

                    <button class="btn btn-lg main-button" asp-action="AddCategory" asp-controller="Category">Créer</button>
                </form>
            </section>
        </div>
    </div>
</div>