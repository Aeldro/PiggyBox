@model WildPay.Models.ViewModels.MemberAdded

@{
    ViewData["Title"] = "Ajouter participant";
}
<svg xmlns="http://www.w3.org/2000/svg" class="d-none">
    <symbol id="check-circle-fill" viewBox="0 0 16 16">
        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
    </symbol>
    <symbol id="exclamation-triangle-fill" viewBox="0 0 16 16">
        <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
    </symbol>
</svg>

<div>
    <h3><span class="material-symbols-outlined">person_add</span> Ajouter une personne au groupe</h3>
</div>

<div>
    @if (ViewBag.Message != null)
    {
        if (ViewBag.Message == "Utilisateur ajouté au groupe avec succès.")
        {
            <div class="alert alert-success alert-flexbox" role="alert">
                <svg class="bi flex-shrink-0 me-2 alert-resize" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill" /></svg>
                <div class="alert-padding">
                    <p class="mb-0">@ViewBag.Message</p>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-danger alert-flexbox" role="alert">
                <svg class="bi flex-shrink-0 me-2 alert-resize" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill" /></svg>
                <div class="alert-padding">
                    <p class="mb-0">@ViewBag.Message</p>
                </div>
            </div>
        }
    }
</div>

<form method="post">
    <div class="mt-3 form-group">
        <input type="text" asp-for="@Model.GroupId" hidden="hidden" readonly />

        <div class="form-floating mb-3">
            <input class="form-control" type="email" asp-for="@Model.Email" placeholder="Email" required />
            <label class="control-label" asp-for="@Model.Email">Email</label>
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>

        <button class="btn btn-lg main-button" asp-action="AddMemberToGroup" asp-controller="Group">Ajouter</button>
    </div>
</form>

